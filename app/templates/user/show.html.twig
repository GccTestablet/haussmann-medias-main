{% extends 'shared/layout/layout_base.html.twig' %}

{% block content_title %}
    {{ user.fullName }}
{% endblock %}
{% block content_action %}
    <a class="btn btn-success" href="{{ path('app_user_update', {'id': user.id}) }}">{% trans from 'misc' %}Update{% endtrans %}</a>
{% endblock %}
{% block content %}
    {% component card %}
        {% block body_content %}
            <ul>
                <li>Full name: {{ user.fullName }}</li>
                <li>Email: {{ user.email }}</li>
                <li>Roles: {{ user.roles|join(', ') }}</li>
                <li>Enabled: {{ user.enabled }}</li>
                <li>Last login: {{ user.lastLogin|datetime_format }}</li>
                <li>Last activity: {{ user.lastActivity|datetime_format }}</li>
                <li>Created at: {{ user.createdAt|datetime_format }}</li>
                <li>Created by: {{ user.createdBy|user_format }}</li>
                <li>Updated at: {{ user.updatedAt|datetime_format }}</li>
                <li>Updated by: {{ user.updatedBy|user_format }}</li>
            </ul>
        {% endblock %}
    {% endcomponent %}
{% endblock %}
