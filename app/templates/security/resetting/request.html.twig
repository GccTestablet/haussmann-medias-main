{% extends 'shared/layout/layout_authentication.html.twig' %}

{% block content %}
    {% component card %}
        {% block header_content %}
            <h2 class="card-title text-center">Please enter the email address used to receive a password reset link.</h2>
        {% endblock%}
        {% block body_content %}
            {{ form_start(form) }}
            {{ form_rest(form) }}
            <div class="justify-content-between">
                <div class="d-grid mt-3">
                    <button type="submit" class="btn btn-warning">Envoyer la demande</button>
                </div>
                <div class="row justify-content-center mt-3">
                    <a href="{{ path('app_login') }}" class="btn btn-sm btn-link">{% trans from 'security' %}Back to authentication{% endtrans %}</a>
                </div>
            </div>
            {{ form_end(form) }}
        {% endblock%}
    {% endcomponent %}
{% endblock %}
