{% extends 'shared/layout/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Haussmann Medias - Login</h1>

    {{ form_start(form) }}
    {{ form_rest(form) }}
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="_remember_me" name="_remember_me" />
        <label class="form-check-label" for="_remember_me">Se souvenir de moi ?</label>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
    {{ form_end(form) }}
{% endblock %}
