{% extends 'shared/layout/layout_base.html.twig' %}

{% block content %}
<div class="card mb-4">
    <h2 class="card-header text-center">You will change your password !</h2>
    <div class="card-body">
        {{ form_start(form) }}
            <!-- Password -->
            <div class="mb-3 form-password-toggle fv-plugins-icon-container">
                {{ form_rest(form) }}
            </div>
            <div class="col-12 mt-1">
                <button class="btn btn-warning" type="submit">Save changes</button>
                <button class="btn btn-warning" type="button" onclick="history.go(-1);">Cancel</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

