{% extends 'shared/layout/layout_base.html.twig' %}

{% block content %}
<div class="card mb-4">
    <h1 class="card-header text-center">List of companies</h1>
    <div class="card-body">

    <a href="{{ path('app_company_add') }}">New</a>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>User count</th>
            </tr>
        </thead>
        <tbody>
            {% for company in companies %}
                <tr>
                    <td><a href="{{ path('app_company_show', {'id': company.id}) }}">{{ company.name }}</a></td>
                    <td>{{ company.users|length }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}
