{% extends 'shared/layout/layout_base.html.twig' %}

{% block content %}
    {% component card %}
        {% block header_content %}
            <h1 class="card-title text-center">{% trans from 'company' %}List of companies{% endtrans %}</h1>
        {% endblock %}
        {% block body_content %}
            <div class="justify-content-between">
                <a href="{{ path('app_company_add') }}" class="btn btn-success">{% trans from 'company' %}Add company{% endtrans %}</a>
            </div>
            <table class="table">
                <thead>
                <tr>
                    <th>{% trans from 'company' %}Name{% endtrans %}</th>
                    <th>{% trans from 'company' %}User count{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for company in companies %}
                    <tr>
                        <td><a href="{{ path('app_company_show', {'id': company.id}) }}">{{ company.name }}</a></td>
                        <td>{{ company.users|length }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endblock %}
    {% endcomponent %}
{% endblock %}
