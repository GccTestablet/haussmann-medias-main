<table class="table table-striped table-borderless fs-sm">
    <tbody>
    <tr>
        <td>{% trans from 'work' %}Internal Id{% endtrans %}</td>
        <td>{{ work.internalId }}</td>
    </tr>
    <tr>
        <td>{% trans from 'work' %}Imdb{% endtrans %}</td>
        <td><a href="{{ work.imdbLink }}" target="_blank">{{ work.imdbId }}</a></td>
    </tr>
    <tr>
        <td>{% trans from 'work' %}Name{% endtrans %}</td>
        <td>{{ work.name }}</td>
    </tr>
    <tr>
        <td>{% trans from 'work' %}Original name{% endtrans %}</td>
        <td>{{ work.originalName }}</td>
    </tr>
    <tr>
        <td>{% trans from 'work' %}Minimum guaranteed before reversion{% endtrans %}</td>
        <td>{{ work.minimumGuaranteedBeforeReversion }}</td>
    </tr>
    <tr>
        <td>{% trans from 'work' %}Minimum cost of the top before reversion{% endtrans %}</td>
        <td>{{ work.minimumCostOfTheTopBeforeReversion }}</td>
    </tr>
    <tr>
        <td>{% trans from 'work' %}Year{% endtrans %}</td>
        <td>{{ work.year }}</td>
    </tr>
    <tr>
        <td>{% trans from 'work' %}Duration{% endtrans %}</td>
        <td>{{ work.duration }}</td>
    </tr>
    <tr>
        <td>{% trans from 'work' %}Country{% endtrans %}</td>
        <td>{{ work.countries|map(code => code|country_format)|join(', ') }}</td>
    </tr>
    <tr>
        <td>{% trans from 'work' %}Quota{% endtrans %}</td>
        <td>{{ work.quota.asText|trans({}, 'work') }}</td>
    </tr>
    </tbody>
</table>