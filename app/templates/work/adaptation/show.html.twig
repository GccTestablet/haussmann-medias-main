{% extends 'shared/layout/layout_base.html.twig' %}

{% block content %}
    {% component card %}
        {% block body_content %}
            <ul>
                <li>Id: {{ workAdaptation.id }}</li>
                <li>Oeuvre: {{ workAdaptation.work.name }}</li>
                <li>Coût doublage: {{ workAdaptation.dubbingCost }}</li>
                <li>Coût fabrication: {{ workAdaptation.manufacturingCost }}</li>
                <li>Coût fichier PAV: {{ workAdaptation.mediaMatrixFileCost }}</li>
                <li>Created at: {{ workAdaptation.createdAt|datetime_format }}</li>
                <li>Created by: {{ workAdaptation.createdBy|user_format }}</li>
                <li>Updated at: {{ workAdaptation.updatedAt|datetime_format }}</li>
                <li>Updated by: {{ workAdaptation.updatedBy|user_format }}</li>
            </ul>

            <a href="{{ path('app_work_show', {'id': workAdaptation.work.id}) }}" class="btn btn-primary">Retour à l'oeuvre</a>
        {% endblock %}
    {% endcomponent %}
{% endblock %}

