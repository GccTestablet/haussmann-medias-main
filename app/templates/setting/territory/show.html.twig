{% extends 'shared/layout/layout_base.html.twig' %}

{% block content_title %}
    {{ territory.name }}
{% endblock %}
{% block content_action %}
    <a href="{{ path('app_setting_territory_update', {'id': territory.id}) }}" class="btn btn-sm btn-warning">{% trans from 'misc' %}Update{% endtrans %}</a>
{% endblock %}
{% block content %}
    {% component card %}
        {% block body_content %}
            <ul>
                <li>Id: {{ territory.id }}</li>
                <li>Name: {{ territory.name }}</li>
                <li>Description: {{ territory.description }}</li>
                <li>Created at: {{ territory.createdAt|datetime_format }}</li>
                <li>Created by: {{ territory.createdBy|user_format }}</li>
                <li>Updated at: {{ territory.updatedAt|datetime_format }}</li>
                <li>Updated by: {{ territory.updatedBy|user_format }}</li>
            </ul>
        {% endblock %}
    {% endcomponent %}
{% endblock %}
