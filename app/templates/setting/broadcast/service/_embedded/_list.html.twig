<div class="table-responsive">
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>{% trans from 'misc' %}Archived?{% endtrans %}</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td><a href="{{ path('app_setting_broadcast_service_show', {'id': service.id}) }}">{{ service.name }}</a></td>
                <td>{{ service.archived|bool_format }}</td>
                <td>
                    <a href="{{ path('app_setting_broadcast_channel_service_update', {'channel': service.broadcastChannel.id, 'id': service.id}) }}" class="btn btn-sm btn-warning">Update</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>