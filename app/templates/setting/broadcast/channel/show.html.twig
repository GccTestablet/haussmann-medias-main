{% extends 'shared/layout/layout_base.html.twig' %}

{% block content_title %}
    {{ channel.name }}
{% endblock %}
{% block content_action %}
    <a href="{{ path('app_setting_broadcast_channel_service_add', {'channel': channel.id}) }}" class="btn-block-option">{% trans from 'setting' %}Add a service{% endtrans %}</a>
    <a href="{{ path('app_setting_broadcast_channel_update', {'id': channel.id}) }}" class="btn-block-option">{% trans from 'misc' %}Update{% endtrans %}</a>
{% endblock %}
{% block content %}
    {% component card %}
        {% block body_content %}
            <ul>
                <li>Id: {{ channel.id }}</li>
                <li>Name: {{ channel.name }}</li>
                <li>Created at: {{ channel.createdAt|datetime_format }}</li>
                <li>Created by: {{ channel.createdBy|user_format }}</li>
                <li>Updated at: {{ channel.updatedAt|datetime_format }}</li>
                <li>Updated by: {{ channel.updatedBy|user_format }}</li>
            </ul>

            <h4>{% trans from 'setting' %}List of broadcast services{% endtrans %}</h4>

            {% include 'setting/broadcast/service/_embedded/_list.html.twig' with {
                'services': channel.broadcastServices
            } %}
        {% endblock %}
    {% endcomponent %}
{% endblock %}
