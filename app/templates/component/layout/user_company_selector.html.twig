<div{{ attributes.defaults({class: 'dropdown mx-2'}) }}>
    <button class="btn btn-secondary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        {{ user.connectedOn.name ?? 'Select Company' }}
    </button>
    <ul class="dropdown-menu w-100">
        {% for company in computed.companies|filter(company => company != app.user.connectedOn) %}
            <li>
                <a class="dropdown-item" href="{{ path('app_security_profile_switch_company', {'company': company.id, 'redirectTo': app.request.requestUri}) }}">
                    {{ company.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
</div>