<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
    <div class="app-brand demo d-flex justify-content-center align-items-center" style="height: 120px; overflow: hidden;">
        <a href="{{ path('app_dashboard') }}" class="app-brand-link text-center">
            <img src="{{ asset('build/images/_logo/rights_flow_black_orange.svg') }}" alt="Rights Flow Logo" class="app-brand-logo demo" style="width: 200px; height: auto; max-width: 100%; max-height: 100%; object-fit: contain;">
        </a>
    </div>
    <ul class="menu-inner py-1 ps">
        <!-- Choose Company-->
        <li class="menu-header small text-uppercase"><span class="menu-header-text">Choose your company</span></li>
        <li class="menu-item">
            {{ component('layout_user_company_selector', {
                user: app.user
            })}}
        </li>
        <!-- Dashboard -->
        <li class="menu-header small text-uppercase"><span class="menu-header-text">Dashboard</span></li>
        <li class="menu-item">
            <a href="{{ path('app_dashboard') }}" class="menu-link">
                <i class="menu-item"></i>
                <div>{% trans from 'misc' %}Dashboard{% endtrans %}</div>
            </a>
        </li>
        <!-- Managing my business -->
        <li class="menu-header small text-uppercase"><span class="menu-header-text">Managing my business</span></li>
        {% if app.user.connectedOn %}
            <li class="menu-item">
                <a href="{{ path('app_security_profile_company') }}" class="menu-link">
                    <i class="menu-item"></i>
                    <div>{% trans from 'company' %}Company{% endtrans %}</div>
                </a>
            </li>
            <li class="menu-item">
                <a href="{{ path('app_security_profile_works') }}" class="menu-link">
                    <i class="menu-item"></i>
                    <div>{% trans from 'work' %}Works{% endtrans %}</div>
                </a>
            </li>
            <li class="menu-item">
                <a href="{{ path('app_security_profile_acquisition_contracts') }}" class="menu-link">
                    <i class="menu-item"></i>
                    <div>{% trans from 'contract' %}Acquisition contracts{% endtrans %}</div>
                </a>
            </li>
            {% else %}
                <li class="menu-item">
                    <div class="alert alert-warning text-center p-1 fw-bold">
                        {% trans from 'user' %}No company selected{% endtrans %}
                    </div>
                </li>
        {% endif %}
        <!-- Settings -->
        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <li class="menu-header small text-uppercase"><span class="menu-header-text">Settings</span></li>
            <li class="menu-item">
                <a href="{{ path('app_company_index') }}" class="menu-link">
                    <i class="menu-item"></i>
                    <div>{% trans from 'company' %}Companies{% endtrans %}</div>
                </a>
            </li>
            <li class="menu-item">
                <a href="{{ path('app_user_index') }}" class="menu-link">
                    <i class="menu-item"></i>
                    <div>{% trans from 'user' %}Users{% endtrans %}</div>
                </a>
            </li>
            <li class="menu-item">
                <a href="{{ path('app_setting_broadcast_channel_index') }}" class="menu-link">
                    <i class="menu-item"></i>
                    <div>{% trans from 'setting' %}Broadcast channels{% endtrans %}</div>
                </a>
            </li>
            <li class="menu-item">
                <a href="{{ path('app_setting_territory_index') }}" class="menu-link">
                    <i class="menu-item"></i>
                    <div>{% trans from 'setting' %}Territories{% endtrans %}</div>
                </a>
            </li>
            <li class="menu-item">
                <a href="{{ path('app_setting_adaptation_cost_type_index') }}" class="menu-link">
                    <i class="menu-item"></i>
                    <div>{% trans from 'setting' %}Adaptation cost types{% endtrans %}</div>
                </a>
            </li>
        {% endif %}
    </ul>
</aside>