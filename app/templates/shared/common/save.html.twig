{% extends 'shared/layout/layout_base.html.twig' %}

{% block content %}
<div class="card mb-4">
    <div class="card-header">
        <h1 class="card-title text-center h3 mb-3 font-weight-normal">{{ title|trans }}</h1>
    </div>
    <div class="card-body">

    {{ form_start(form) }}
    {{ form_rest(form) }}

    <button class="btn btn-lg btn-primary" type="submit">
        Save
    </button>
    {{ form_end(form) }}
{% endblock %}
