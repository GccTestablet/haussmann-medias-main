{% extends 'shared/layout/base.html.twig' %}

{% block body %}
    <h1>Beneficiary: {{ beneficiary.name }}</h1>

    <a href="{{ path('app_beneficiary_index') }}">List</a>

    <h4>Contracts</h4>
    <table>
        <thead>
        <tr>
            <th>Company</th>
            <th>Signed at</th>
            <th>Starts at</th>
            <th>Ends at</th>
        </tr>
        </thead>
        <tbody>
        {% for contract in beneficiary.contracts %}
            <tr>
                <td><a href="{{ path('app_company_show', {'id': contract.company.id}) }}">{{ contract.company.name }}</a></td>
                <td>{{ contract.signedAt|date }}</td>
                <td>{{ contract.startsAt|date }}</td>
                <td>{{ contract.endsAt|date }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

