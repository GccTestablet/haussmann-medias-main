{% extends 'shared/layout/layout_base.html.twig' %}

{% block content_title %}
    {% trans from 'contract' %}List of distribution contracts{% endtrans %}
{% endblock %}
{% block content_action %}
    <a href="{{ path('app_distribution_contract_add') }}" class="btn btn-sm btn-success">{% trans from 'contract' %}Add distribution contract{% endtrans %}</a>
{% endblock %}
{% block content %}
    {% component data_table with {
        pagerResponse: pagerResponse
    } %}
        {% block filters %}
            {% set form = pagerResponse.pager.form.createView %}
            {{ form_start(form) }}
            <div class="row">
                <div class="col-sm-6 col-lg-3">{{ form_row(form.name) }}</div>
                <div class="col-sm-6 col-lg-3">{{ form_row(form.distributors) }}</div>
                <div class="col-sm-6 col-lg-3">{{ form_row(form.works) }}</div>
                <div class="col-sm-6 col-lg-3">{{ form_row(form.channels) }}</div>
            </div>
            {{ form_rest(form) }}

            <div class="mt-3">
                <button class="btn btn-sm btn-primary" type="submit">
                    {% trans from 'misc' %}Search{% endtrans %}
                </button>

                <button class="btn btn-sm btn-danger" data-form--reset-target="button">
                    {% trans from 'misc' %}Reset{% endtrans %}
                </button>
            </div>
            {{ form_end(form) }}
        {% endblock %}
    {% endcomponent %}
{% endblock %}
