<div class="table-responsive">
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Distributor</th>
            <th>Works</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for contract in contracts %}
            <tr>
                <td>
                    <a href="{{ path('app_company_distribution_contract_show', {'company': contract.company.id, 'id': contract.id}) }}">
                        {{ contract.name }}
                    </a>
                </td>
                <td><a href="{{ path('app_company_show', {'id': contract.distributor.id}) }}">{{ contract.distributor.name }}</a></td>
                <td>{{ contract.works|map(work => work.name)|join(', ') }}</td>
                <td>
                    <a href="{{ path('app_company_distribution_contract_update', {'company': contract.company.id, 'id': contract.id}) }}" class="btn btn-sm btn-warning">
                        {% trans from 'misc' %}Update{% endtrans %}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>