<div class="table-responsive">
    <table id="distribution-contract-works-table" class="table" data-controller="datatable--table-expand">
        <thead>
        <tr>
            <th>&nbsp;</th>
            <th>{% trans from 'work' %}Work{% endtrans %}</th>
            <th>{% trans from 'contract' %}Rights starts at{% endtrans %}</th>
            <th>{% trans from 'contract' %}Rights ends at{% endtrans %}</th>
            <th>{% trans from 'misc' %}Amount{% endtrans %}</th>
            <th class="text-end">{% trans from 'misc' %}Actions{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for contractWork in contract.contractWorks %}
            {% set work = contractWork.work %}
            <tr>
                <td class="text-center">
                    <button type="button" class="btn btn-sm"
                            data-datatable--table-expand-target="button"
                            data-action="click->datatable--table-expand#expand"
                            data-datatable--table-expand-work-param="{{ work.id }}"
                    >
                        <i class="fa fa-angle-right text-muted"></i>
                    </button>
                    <div class="position-absolute d-none"
                         data-datatable--table-expand-target="expandableRow"
                         data-work-id="{{ work.id }}"
                    >
                        {% include 'work/territory/_embedded/_list.html.twig' with {
                            workTerritories: contractWork.workTerritories,
                        } %}
                    </div>
                </td>
                <td><a href="{{ path('app_work_show', {'id': work.id}) }}">{{ contractWork.work.name }}</a></td>
                <td>{{ contractWork.startsAt|date_format }}</td>
                <td>{{ contractWork.endsAt|date_format }}</td>
                <td>{{ contractWork.amount|format_currency(contractWork.currency) }}</td>
                <td class="text-end">
                    <a href="{{ path('app_distribution_contract_work_update', {'contract': contract.id, 'work': work.id}) }}" class="btn btn-sm btn-warning">
                        {% trans from 'misc' %}Update{% endtrans %}
                    </a>
                    <a href="{{ path('app_distribution_contract_work_territory_manage', {'contract': contract.id, 'work': work.id}) }}" class="btn btn-sm btn-warning">
                        {% trans from 'work' %}Manage territories{% endtrans %}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>