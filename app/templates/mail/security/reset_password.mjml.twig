{% extends 'shared/layout/layout_email.mjml.twig' %}

{% block page_title %}Bonjour {{ user.fullName }}{% endblock %}

{% block page_content %}
    <mj-section>
        <mj-column>
            <mj-text>Afin de réinitialiser votre mot de passe, veuillez cliquer sur le lien suivant.</mj-text>
        </mj-column>
    </mj-section>
    <mj-section>
        <mj-column>
            <mj-button href="{{ confirmationUrl }}">
                Réinitialiser votre mot de passe
            </mj-button>
        </mj-column>
    </mj-section>
{% endblock %}

{% block plain_text_content %}
    Bonjour {{ user.fullName }},


    Afin de réinitialiser votre mot de passe, veuillez cliquer sur le lien suivant.

    {{ confirmationUrl }}
{% endblock %}